# Configurazione Database
DB_HOST=db
DB_PORT=5432
DB_NAME=ortools_db
DB_USER=ortools_user
DB_PASSWORD=ortools_password

# Configurazione SSH Tunnel (se necessario)
SSH_ENABLED=false
SSH_HOST=remote.example.com
SSH_PORT=22
SSH_USERNAME=user
SSH_KEY_PATH=/app/ssh_key

# Lista di task da pianificare (separati da virgola)
# Se vuoto, estrae automaticamente i primi 20 task non completati con ore pianificate
TASK_IDS=

# Limite di task da estrarre se TASK_IDS Ã¨ vuoto
TASK_LIMIT=20

# Parametri OrTools
ORTOOLS_TIME_LIMIT=3600
ORTOOLS_WORKERS=4
ORTOOLS_LOG_PROGRESS=false
ORTOOLS_OUTPUT_FILE=/app/data/schedule.json

# Logging
LOG_LEVEL=INFO
LOG_FILE=/app/logs/scheduler.log
